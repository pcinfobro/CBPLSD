                                <div class="profile-detail">
                                    <div class="profile-detail-label">Email</div>
                                    <div class="profile-detail-value"><%= user.email %></div>
                                </div>
                                
                                <div class="profile-detail">
                                    <div class="profile-detail-label">Contact Method</div>
