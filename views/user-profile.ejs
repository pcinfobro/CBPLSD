                        <!-- Password Change Form -->
                        <form id="passwordChangeForm" action="/user/change-password" method="post">
                            <div class="form-group">
                                <label class="profile-detail-label" for="oldPassword">Current Password</label>
                                <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                            </div>
                            
                            <div class="form-group">
                                <label class="profile-detail-label" for="newPassword">New Password</label>
                                <input type="password" class="form-control" id="newPassword" name="newPassword" required>
