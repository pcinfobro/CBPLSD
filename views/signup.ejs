mobileNavClose.addEventListener('click', closeMenu);
overlay.addEventListener('click', closeMenu);

// Password Toggle
const passwordToggle = document.getElementById('passwordToggle');
const confirmPasswordToggle = document.getElementById('confirmPasswordToggle');
const passwordInput = document.getElementById('password');
const confirmPasswordInput = document.getElementById('cpassword');

passwordToggle.addEventListener('click', () => {
    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
    passwordInput.setAttribute('type', type);
    passwordToggle.innerHTML = type === 'password' ? '<i class="far fa-eye"></i>' : '<i class="far fa-eye-slash"></i>';
});

confirmPasswordToggle.addEventListener('click', () => {
    const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
    confirmPasswordInput.setAttribute('type', type);
    confirmPasswordToggle.innerHTML = type === 'password' ? '<i class="far fa-eye"></i>' : '<i class="far fa-eye-slash"></i>';
});

// Sticky Header
window.addEventListener('scroll', () => {
    const header = document.querySelector('header');
    if (window.scrollY > 50) {
        header.style.padding = '10px 0';
        header.style.boxShadow = '0 4px 6px rgba(0, 0, 0, 0.1), 0 2px 4px rgba(0, 0, 0, 0.06)';
    } else {
        header.style.padding = '17px 0';
        header.style.boxShadow = '0 1px 2px rgba(0, 0, 0, 0.05)';
    }
});

// Contact Method Selection Handler
const contactMethodSelect = document.getElementById('contactMethod');
        const contactInputs = {
            telegram: document.getElementById('telegramInput'),
            wechat: document.getElementById('wechatInput'),
            teams: document.getElementById('teamsInput'),
            email: document.getElementById('emailInput'),
            discord: document.getElementById('discordInput')
        };

// Show the appropriate input field based on selected contact method
contactMethodSelect.addEventListener('change', function() {
    // Hide all contact input fields first
    Object.values(contactInputs).forEach(input => {
        input.classList.remove('active');
        const inputField = input.querySelector('input');
        inputField.removeAttribute('required');
        inputField.value = '';
    });
    
    // Show the selected contact method's input field
    const selectedMethod = this.value;
    if (selectedMethod && contactInputs[selectedMethod]) {
        contactInputs[selectedMethod].classList.add('active');
        const label = contactInputs[selectedMethod].querySelector('.contact-method-label');
        if (label) label.classList.add('active');
        
        // Make the input required
        const inputField = contactInputs[selectedMethod].querySelector('input');
        inputField.setAttribute('required', '');
    }
});

// Form Validation
const registrationForm = document.getElementById('registrationForm');
const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

// Update the form validation part of your JavaScript
registrationForm.addEventListener('submit', function(event) {
    event.preventDefault();
    
    let isValid = true;
    
    // Reset previous errors
    const errorMessages = document.querySelectorAll('.error-message');
    errorMessages.forEach(message => {
        message.classList.remove('visible');
    });
    
    const inputs = document.querySelectorAll('.form-input');
    inputs.forEach(input => {
        input.classList.remove('error');
    });
    
    // Validate Username
    const username = document.getElementById('username');
    if (!username.value.trim()) {
        document.getElementById('usernameError').classList.add('visible');
        username.classList.add('error');
        isValid = false;
    }
    
    // Validate Email
    const email = document.getElementById('email');
    if (!email.value.trim() || !emailRegex.test(email.value.trim())) {
        document.getElementById('emailError').classList.add('visible');
        email.classList.add('error');
        isValid = false;
    }
    
    // Validate Contact Method
    const contactMethod = contactMethodSelect.value;
    if (!contactMethod) {
        document.getElementById('contactMethodError').classList.add('visible');
        contactMethodSelect.classList.add('error');
        isValid = false;
    } else {
        // Validate the specific contact method input
        let contactValid = true;
        let contactValue = '';
        
        switch(contactMethod) {
            case 'telegram':
                contactValue = document.getElementById('telegramUsername').value.trim();
                if (!contactValue) {
                    document.getElementById('telegramError').textContent = "Telegram username is required";
                    document.getElementById('telegramError').classList.add('visible');
                    document.getElementById('telegramUsername').classList.add('error');
                    contactValid = false;
                } else if (!/^@?[a-zA-Z0-9_]{5,32}$/.test(contactValue)) {
                    document.getElementById('telegramError').textContent = "Please enter a valid Telegram username (e.g., @username)";
                    document.getElementById('telegramError').classList.add('visible');
                    document.getElementById('telegramUsername').classList.add('error');
                    contactValid = false;
                }
                break;
                
            case 'wechat':
                contactValue = document.getElementById('wechatUsername').value.trim();
                if (!contactValue) {
                    document.getElementById('wechatError').textContent = "WeChat username is required";
                    document.getElementById('wechatError').classList.add('visible');
                    document.getElementById('wechatUsername').classList.add('error');
                    contactValid = false;
                }
                break;
                
            case 'teams':
                contactValue = document.getElementById('teamsEmail').value.trim();
                if (!contactValue || !emailRegex.test(contactValue)) {
                    document.getElementById('teamsError').textContent = "Please enter a valid email address";
                    document.getElementById('teamsError').classList.add('visible');
                    document.getElementById('teamsEmail').classList.add('error');
                    contactValid = false;
                }
                break;
                
            case 'email':
                contactValue = document.getElementById('contactEmail').value.trim();
                if (!contactValue || !emailRegex.test(contactValue)) {
                    document.getElementById('contactEmailError').textContent = "Please enter a valid email address";
                    document.getElementById('contactEmailError').classList.add('visible');
                    document.getElementById('contactEmail').classList.add('error');
                    contactValid = false;
                }
                break;
                
            case 'discord':
                contactValue = document.getElementById('discordUsername').value.trim();
                if (!contactValue) {
                    document.getElementById('discordError').textContent = "Discord username is required";
                    document.getElementById('discordError').classList.add('visible');
                    document.getElementById('discordUsername').classList.add('error');
                    contactValid = false;
                } else if (!/^[^#@:]{2,32}#[0-9]{4}$/.test(contactValue)) {
                    document.getElementById('discordError').textContent = "Please enter a valid Discord username (e.g., username#1234)";
                    document.getElementById('discordError').classList.add('visible');
                    document.getElementById('discordUsername').classList.add('error');
                    contactValid = false;
                }
                break;
        }
        
        if (!contactValid) {
            isValid = false;
        }
    }
    
    // Validate Password
    const password = document.getElementById('password');
    const passwordError = document.getElementById('passwordError');
    const passwordValue = password.value.trim();

    if (!passwordValue) {
        passwordError.textContent = "Password is required";
        passwordError.classList.add('visible');
        password.classList.add('error');
        isValid = false;
    } else if (passwordValue.length < 5) {
        passwordError.textContent = "Password must be at least 5 characters long";
        passwordError.classList.add('visible');
        password.classList.add('error');
        isValid = false;
    } else if (!/[A-Z]/.test(passwordValue)) {
        passwordError.textContent = "Password must contain at least one uppercase letter";
        passwordError.classList.add('visible');
        password.classList.add('error');
        isValid = false;
    } else if (!/[0-9]/.test(passwordValue)) {
        passwordError.textContent = "Password must contain at least one number";
        passwordError.classList.add('visible');
        password.classList.add('error');
        isValid = false;
    }
    
    // Validate Confirm Password
    const confirmPassword = document.getElementById('cpassword');
    if (password.value !== confirmPassword.value) {
        document.getElementById('confirmPasswordError').classList.add('visible');
        confirmPassword.classList.add('error');
        isValid = false;
    }
    
    // Validate reCAPTCHA
    const recaptchaResponse = grecaptcha.getResponse();
    if (!recaptchaResponse) {
        alert('Please complete the reCAPTCHA verification');
        isValid = false;
    }
    
    if (isValid) {
        // Form is valid, submit it
        this.submit();
    }
});

// Initialize the form by triggering the contact method change event
contactMethodSelect.dispatchEvent(new Event('change'));
